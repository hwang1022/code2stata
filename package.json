{
  "name": "code2stata",
  "displayName": "Code2Stata",
  "description": "Run Stata code from VS Code on macOS",
  "version": "0.1.0",
  "publisher": "hwang",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Stata",
    "code2stata"
  ],
  "license": "MIT",
  "activationEvents": [
    "onLanguage:stata"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code2stata.runCode",
        "title": "Code2Stata: Run Code",
        "icon": "$(play)"
      },
      {
        "command": "code2stata.getVariables",
        "title": "Code2Stata: Get Variable Names",
        "icon": "$(list-unordered)"
      }
    ],
    "configuration": {
      "title": "Code2Stata",
      "properties": {
        "code2stata.whichApp": {
          "type": "string",
          "enum": [
            "stataBE",
            "stataSE",
            "stataMP"
          ],
          "default": "stataSE",
          "description": "Which Stata application to send code to."
        },
        "code2stata.focusWindow": {
          "type": "boolean",
          "default": true,
          "description": "Bring Stata to the foreground when sending code."
        },
        "code2stata.autoLaunch": {
          "type": "boolean",
          "default": true,
          "description": "Automatically launch Stata if it is not running."
        },
        "code2stata.autoRetrieveVariables": {
          "type": "boolean",
          "default": true,
          "description": "Automatically retrieve variable names from Stata on a timer."
        },
        "code2stata.autoRetrieveInterval": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "description": "Seconds between automatic variable name retrievals. Minimum 5."
        },
        "code2stata.retrieveTimeout": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "description": "Minutes to wait for Stata to become free before timing out."
        },
        "code2stata.userCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional Stata commands to include in IntelliSense autocomplete."
        }
      }
    },
    "keybindings": [
      {
        "command": "code2stata.runCode",
        "key": "shift+ctrl+a",
        "mac": "shift+cmd+a",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == stata",
          "command": "code2stata.runCode",
          "group": "code2stata"
        },
        {
          "when": "resourceLangId == stata",
          "command": "code2stata.getVariables",
          "group": "code2stata"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == stata",
          "command": "code2stata.runCode",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == stata",
          "command": "code2stata.getVariables",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
